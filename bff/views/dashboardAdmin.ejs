<div class="container-admin">
        <div class="container-admin-sidebar">
            <ul class="container-admin-sidebarList">
                <li class="container-admin-sidebarItem" data-target="pane-add">Add new product</li>
                <li class="container-admin-sidebarItem" data-target="pane-products">Product list</li>
                <li class="container-admin-sidebarItem" data-target="pane-users">User list</li>
                <li class="container-admin-sidebarItem" data-target="pane-logout">Log out</li>
            </ul>
        </div>
        <div class="container-admin-content">
            <div class="container-admin-content-header">
                <span>Hello <%= username %></span>
            </div>
            <!-- Pane 1 -->
            <section id="pane-add" class="container-admin-content-pane container-admin-content-active">
                <!-- giữ nguyên form Add New Product của bạn -->
                <h1>Add New Product</h1>

                <form action="/products" method="POST">
                    <label for="name" class="container-admin-contentlabel-pane">Product ID:</label>
                    <input type="text" name="id" class="container-admin-content-input-pane" placeholder="Product ID"
                        required>

                    <label for="name" class="container-admin-content-label-pane">Product Name:</label>
                    <input type="text" name="name" class="container-admin-content-input-pane" placeholder="Product Name"
                        required>

                    <label for="name" class="container-admin-content-label-pane">Product Price:</label>
                    <input type="number" name="price" class="container-admin-content-input-pane"
                        placeholder="Product Price" required>

                    <label for="name" class="container-admin-content-label-pane">Stock Count:</label>
                    <input type="number" name="stock" class="container-admin-content-input-pane"
                        placeholder="Stock Count" required>

                    <label for="category" class="container-admin-content-label-pane">Category:</label>
                    <select name="category" class="container-admin-content-input-pane" required>
                        <option value="coffee">Coffee</option>
                        <option value="tea">Tea</option>
                        <option value="snack">Snack</option>
                        <option value="other">Other</option>
                    </select>
                    <button type="submit"
                        class="container-admin-content-btn-primary container-admin-content-btn-admin">Add
                        Product</button>
                </form>
            </section>

            <!-- Pane 2 -->
            <section id="pane-products" class="container-admin-content-pane">
                <h1>Product list</h1>
                <ul class="container-admin-content-paneList">
                    <% if (products && products.length> 0) { %>
                        <% products.forEach(function(product, index) { %>
                            <li class="container-admin-content-paneItem">
                                <span class="container-admin-content-Number">
                                    <%= (index + 1).toString().padStart(2, '0' ) %>
                                </span>
                                <div class="container-admin-content-pane-boxcontent">
                                    <div>
                                        <span class="container-admin-content-pane-info">ID: #<%= product.id %></span>
                                        <span class="container-admin-content-pane-info">Name: <%= product.name %></span>
                                        <span class="container-admin-content-pane-info">Price: $<%=
                                                product.price.toFixed(2) %>đ</span>
                                        <span class="container-admin-content-pane-info">Stock: <%= product.stock %>
                                                </span>
                                        <span class="container-admin-content-pane-info">Created At: <%=
                                                product.createdAt.toLocaleString() %></span>
                                    </div>
                                    <span class="container-admin-content-pane-delete">Delete</span>
                                </div>
                            </li>
                            <% }); %>
                                <% } else { %>
                                    <li class="container-admin-content-paneItem">
                                        <span class="container-admin-content-pane-info">No products found.</span>
                                    </li>
                                    <% } %>
                </ul>
            </section>

            <!-- Pane 3 -->
            <section id="pane-users" class="container-admin-content-pane">
                <h1>User list</h1>
                <ul class="container-admin-content-paneList">
                    <% if (users && users.length> 0) { %>
                        <% users.forEach(function(user, index) { %>
                            <li class="container-admin-content-paneItem">
                                <span class="container-admin-content-Number">
                                    <%= (index + 1).toString().padStart(2, '0' ) %>
                                </span>
                                <div class="container-admin-content-pane-boxcontent">
                                    <div>
                                        <span class="container-admin-content-pane-info">Email: <%= user.email %></span>
                                        <span class="container-admin-content-pane-info">Name: <%= user.name %></span>
                                        <span class="container-admin-content-pane-info">Created At: <%= user.createdAt
                                                %></span>
                                    </div>
                                    <span class="container-admin-content-pane-delete">Delete</span>
                                </div>
                            </li>
                            <% }); %>
                                <% } else { %>
                                    <li class="container-admin-content-paneItem">
                                        <span class="container-admin-content-pane-info">No users found.</span>
                                    </li>
                                    <% } %>
                </ul>
            </section>

            <!-- Pane 4 -->
            <section id="pane-logout" class="container-admin-content-pane">
                <h1 class="container-admin-content-pane-header">Ready to log out?</h1>
                <div class="container-admin-content-button">
                    <button class="container-admin-content-button-btn">Yes</button>
                    <button class="container-admin-content-button-btn">No</button>
                </div>
            </section>
        </div>
    </div>