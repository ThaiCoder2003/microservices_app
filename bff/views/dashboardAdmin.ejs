<div class="container-admin">
    <div class="sidebar">
        <ul class="sidebarList">
            <li class="sidebarItem" data-target="pane-add">Add new product</li>
            <li class="sidebarItem" data-target="pane-products">Product list</li>
            <li class="sidebarItem" data-target="pane-users">User list</li>
            <li class="sidebarItem" data-target="pane-logout">Log out</li>
        </ul>
    </div>
    <div class="content">
        <div class="admin-header">
            <span>Hello <%= username %></span>
        </div>
        <!-- Pane 1 -->
        <section id="pane-add" class="pane active">
            <!-- giữ nguyên form Add New Product của bạn -->
            <h1>Add New Product</h1>

            <form action="/products" method="POST">
                <label for="name" class="label-pane">Product ID:</label>
                <input type="text" name="id" class="input-pane" placeholder="Product ID" required>

                <label for="name" class="label-pane">Product Name:</label>
                <input type="text" name="name" class="input-pane" placeholder="Product Name" required>

                <label for="name" class="label-pane">Product Price:</label>
                <input type="number" name="price" class="input-pane" placeholder="Product Price" required>

                <label for="name" class="label-pane">Stock Count:</label>
                <input type="number" name="stock" class="input-pane" placeholder="Stock Count" required>
                <button type="submit" class="btn-primary btn-admin">Add Product</button>
            </form>
        </section>

        <!-- Pane 2 -->
        <section id="pane-products" class="pane">
            <h1>Product list</h1>
            <ul class="paneList">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(function(product, index) { %>
                        <li class="paneItem">
                            <span class="Number"><%= (index + 1).toString().padStart(2, '0') %></span>
                            <div class="pane-boxcontent">
                                <div>
                                    <span class="pane-info">ID: #<%= product.id %></span>
                                    <span class="pane-info">Name: <%= product.name %></span>
                                    <span class="pane-info">Price: $<%= product.price.toFixed(2) %>đ</span>
                                    <span class="pane-info">Stock: <%= product.stock %></span>
                                    <span class="pane-info">Created At: <%= product.createdAt.toLocaleString() %></span>
                                </div>
                                <span class="pane-delete">Delete</span>
                            </div>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li class="paneItem">
                        <span class="pane-info">No products found.</span>
                    </li>
                <% } %>
            </ul>
        </section>

        <!-- Pane 3 -->
        <section id="pane-users" class="pane">
            <h1>User list</h1>
            <ul class="paneList">
                <% if (users && users.length > 0) { %>
                    <% users.forEach(function(user, index) { %>
                        <li class="paneItem">
                            <span class="Number"><%= (index + 1).toString().padStart(2, '0') %></span>
                            <div class="pane-boxcontent">
                                <div>
                                    <span class="pane-info">Email: <%= user.email %></span>
                                    <span class="pane-info">Name: <%= user.name %></span>
                                    <span class="pane-info">Created At: <%= user.createdAt %></span>
                                </div>
                                <span class="pane-delete">Delete</span>
                            </div>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li class="paneItem">
                        <span class="pane-info">No users found.</span>
                    </li>
                <% } %>
            </ul>
        </section>

        <!-- Pane 4 -->
        <section id="pane-logout" class="pane">
            <h1>Ready to log out?</h1>
            <div class="button">
                <button>Yes</button>
                <button>No</button>
            </div>
        </section>
    </div>
</div>