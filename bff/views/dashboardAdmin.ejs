<div class="container-admin">
    <div class="sidebar">
        <ul class="sidebarList">
            <li class="sidebarItem" data-target="pane-add">Thêm sản phẩm mới</li>
            <li class="sidebarItem" data-target="pane-products">Danh sách sản phẩm</li>
            <li class="sidebarItem" data-target="pane-users">Danh sách người dùng</li>
            <li class="sidebarItem" data-target="pane-logout">Đăng xuất</li>
        </ul>
    </div>
    <div class="content">
        <div class="admin-header">
            <span>Xin chào <%= username %></span>
        </div>
        <!-- Pane 1 -->
        <section id="pane-add" class="pane active">
            <h1>Thêm sản phẩm mới</h1>

            <form action="/products" method="POST">
                <label for="name" class="label-pane">Mã sản phẩm:</label>
                <input type="text" name="id" class="input-pane" placeholder="Mã sản phẩm" required>

                <label for="name" class="label-pane">Tên sản phẩm:</label>
                <input type="text" name="name" class="input-pane" placeholder="Tên sản phẩm" required>

                <label for="name" class="label-pane">Giá sản phẩm:</label>
                <input type="number" name="price" class="input-pane" placeholder="Giá sản phẩm" required>

                <label for="name" class="label-pane">Xuất xứ:</label>
                <input type="text" name="origin" class="input-pane" placeholder="Xuất xứ">

                <label for="image" class="label-pane">Mô tả:</label>
                <textarea name="description" class="input-pane" placeholder="Mô tả sản phẩm"></textarea>

                <label for="image" class="label-pane">Ảnh sản phẩm:</label>
                <input type="file" name="image" class="input-pane" accept="image/*" required>

                <label for="category" class="label-pane">Loại:</label>
                <select name="category" class="input-pane" required>
                    <option value="Cà phê">Cà phê</option>
                    <option value="Trà">Trà</option>
                    <option value="Đồ ăn vặt">Đồ ăn vặt</option>
                    <option value="Khác" selected>Khác</option>
                </select>
                <button type="submit" class="btn-primary btn-admin">Thêm sản phẩm</button>
            </form>
        </section>

        <!-- Pane 2 -->
        <section id="pane-products" class="pane">
            <h1>Sản phẩm</h1>
            <ul class="paneList">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(function(product, index) { %>
                        <li class="paneItem">
                            <span class="Number"><%= (index + 1).toString().padStart(2, '0') %></span>
                            <div class="pane-boxcontent">
                                <div>
                                    <img src="<%= product.image %>" alt="Ảnh sản phẩm" class="pane-product-image" style="width:60px;height:60px;object-fit:cover;margin-right:10px;">
                                </div>
                                <div>
                                    <span class="pane-info">Mã SP: #<%= product.id %></span>
                                    <span class="pane-info">Tên: <%= product.name %></span>
                                    <span class="pane-info">Giá: <%= product.price.toFixed(2) %>đ</span>
                                    <span class="pane-info">Xuất xứ: <%= product.origin %></span>
                                    <span class="pane-info">
                                        Loại: 
                                        <% 
                                            let categoryMap = { coffee: "Cà phê", tea: "Trà", snack: "Đồ ăn vặt", other: "Khác" }; 
                                            let displayCategory = categoryMap[product.category] || product.category; 
                                        %>
                                        <%= displayCategory %>
                                    </span>
                                    <span class="pane-info">Ngày cập nhật: <%= product.updatedAt %></span>
                                    <span class="pane-info">Mô tả: <%= product.description %></span>
                                </div>
                                <span class="pane-delete" onclick="deleteProduct('<%= product.id %>')">Xóa</span>
                                <script>
                                    function deleteProduct(id) {
                                        if (confirm('Bạn có chắc muốn xóa sản phẩm này?')) {
                                        fetch(`/products/delete/${id}`, {
                                            method: 'DELETE'
                                        })
                                        .then(res => {
                                            if (res.ok) {
                                            location.reload(); // or redirect as needed
                                            } else {
                                            alert('Xóa thất bại!');
                                            }
                                        })
                                        .catch(() => alert('Lỗi kết nối máy chủ.'));
                                        }
                                    }
                                </script>
                            </div>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li class="paneItem"></li>
                        <span class="pane-info">Không tìm thấy sản phẩm nào.</span>
                    </li>
                <% } %>
            </ul>
        </section>

        <!-- Pane 3 -->
        <section id="pane-users" class="pane"></section>
            <h1>Danh sách người dùng</h1>
            <ul class="paneList">
                <% if (users && users.length > 0) { %>
                    <% users.forEach(function(user, index) { %>
                        <li class="paneItem"></li>
                            <span class="Number"><%= (index + 1).toString().padStart(2, '0') %></span>
                            <div class="pane-boxcontent">
                                <div>
                                    <span class="pane-info">Email: <%= user.email %></span>
                                    <span class="pane-info">Tên: <%= user.name %></span>
                                    <span class="pane-info">Ngày tạo: <%= user.createdAt %></span>
                                </div>
                                <span class="pane-delete">Xóa</span>
                            </div>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li class="paneItem">
                        <span class="pane-info">Không tìm thấy người dùng nào.</span>
                    </li>
                <% } %>
            </ul>
        </section>

        <!-- Pane 4 -->
        <section id="pane-logout" class="pane">
            <h1>Bạn có chắc muốn đăng xuất?</h1>
            <div class="button">
                <button>Có</button>
                <button>Không</button>
            </div>
        </section>
    </div>
</div>
