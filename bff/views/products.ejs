<!DOCTYPE html>
<html>
<head>
  <title>Product List</title>
</head>
<body>
  <h1>Product Management</h1>

  <form action="/products" method="POST">
    <input type="text" name="id" placeholder="Product ID" required>
    <input type="text" name="name" placeholder="Product Name" required>
    <input type="number" name="stock" placeholder="Stock Count" required>
    <button type="submit">Add Product</button>
  </form>

  <% if (typeof message !== 'undefined' && message) { %>
    <div style="color: green; margin: 10px 0;"><%= message %></div>
  <% } %>

  <h2>Product List</h2>
  <ul>
    <% products.forEach(p => { %>
      <li><strong><%= p.name %></strong> (ID: <%= p.id %>) â€” Stock: <%= p.stock %></li>
    <% }); %>
  </ul>
</body>
</html>